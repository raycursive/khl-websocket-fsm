{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./lib",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "target": "es2020",
    "lib": ["es2020"],
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["dist", "node_modules", "scripts"]
}
